<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_turn2_act1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        tools:context="com.example.lehuyduc.lab0.Turn2Act1"

    >

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        >

        <ImageView
            android:id="@+id/iv_men"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/men_fashion"
            >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/men"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:layout_alignLeft="@id/iv_men"
            android:layout_alignRight="@id/iv_men"
            android:layout_alignTop="@id/iv_men"
            android:layout_alignBottom="@id/iv_men"
            android:gravity="center"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/rl_1"
        />


    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        >

        <ImageView
            android:id="@+id/iv_girl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/girl_fashion"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/girl"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:layout_alignLeft="@id/iv_girl"
            android:layout_alignRight="@id/iv_girl"
            android:layout_alignTop="@id/iv_girl"
            android:layout_alignBottom="@id/iv_girl"
            android:gravity="center"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/rl_2"
        />


    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="0dp"
        >

    <ImageView
        android:id="@+id/iv_kid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kids_fashion"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kid"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:layout_alignLeft="@id/iv_kid"
        android:layout_alignRight="@id/iv_kid"
        android:layout_alignTop="@id/iv_kid"
        android:layout_alignBottom="@id/iv_kid"
        android:gravity="center"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:layout_below="@id/rl_3"
        />



</LinearLayout>
